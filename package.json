{
  "name": "fotoprokat24",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build:css": "npx @tailwindcss/cli -i ./assets/tailwind.css -o ./assets/style.css --content './**/*.{liquid,json,html,ts,js}'",
    "watch:css": "npx chokidar \"./**/*.{liquid,json,html,css,js}\" -c \"npm run build:css\" --polling",
    "dev": "npx concurrently \"npm run watch:css\" \"shopify theme dev\""
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.21",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "description": "Shopify theme using TailwindCSS 4"
}
