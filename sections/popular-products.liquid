<section class="popular-products">
  <div class="container-middle">
    <h2>Популярні товари</h2>
    {% for product in section.settings.products %}
      {% render 'product-card'
        , product: product %}
    {% endfor %}
  </div>
</section>

{% schema %}
  {
    "name": "Popular products",
    "settings": [
      {
        "type": "product_list",
        "id": "products",
        "label": "Select products",
        "limit": 12
      }
    ],

    "presets": [
      {
        "name": "Popular products",
        "category": "Custom"
      }
    ]
  }
{% endschema %}