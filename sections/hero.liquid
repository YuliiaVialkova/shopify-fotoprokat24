{% assign words = section.settings.hero_text | split: ' ' %}
{% assign first_word = words[0] %}
{% assign rest_words = words | slice: 1, words.size | join: ' ' %}

<section class="hero">
  <div class="hero__body  h-93.75 md:h-137.5">
    {% render 'viewport-images-mobile-desktop'
      ,
 desktop_image: section.settings.desktop_image
      ,
 mobile_image: section.settings.mobile_image
      ,
 class: 'hero_banner block w-full h-full object-cover'
    %}
    <div class="hero__container min-h-5 relative max-w-[1110px] mx-auto ">
      <div class="hero__content absolute bottom-5 md:bottom-12 left-5 md:left-12 z-20  before:content-[''] before:w-[30px] md:before:w-[60px] before:h-[30px] md:before:h-[60px] before:absolute before:bottom-[-15px] md:before:bottom-[-30px] before:left-[-15px] md:before:left-[-30px] before:-z-10 before:rounded-full before:bg-[linear-gradient(180deg,#8EE902_0%,#4F9C2C_100%)]">
        <h1 class="hero__text text-[1rem] font-bold md:text-[1.875rem] px-2.5 leading-[2.625] md:leading-[2.03] w-[200px] md:w-[260px] bg-[white] shadow-[0_2px_6px_rgba(0,0,0,0.15)] md:uppercase ">
          <strong class="text-black font-bold md:text-transparent md:bg-clip-text md:bg-[linear-gradient(270deg,#8EE901_0%,#4F9C2C_99.06%)]">{{ first_word }}</strong>
          {{ rest_words }}</h1>
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Hero section",
    "settings": [
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Hero desktop banner"
      }, {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Hero mobile banner"
      }, {
        "type": "text",
        "id": "hero_text",
        "label": "Hero text",
        "default": "Оренда фото і відео обладнання"
      }
    ],
    "presets": [
      {
        "name": "Hero section"
      }
    ]
  }
{% endschema %}