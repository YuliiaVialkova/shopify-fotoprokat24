<section class="hero">
  <div class="hero__container mx-auto px-4 max-w-[1412px]">
    <div class="hero__content relative">
      {% render 'viewport-images-mobile-desktop',
        desktop_image: section.settings.desktop_image,
        mobile_image: section.settings.mobile_image,
        class: 'hero_banner'
      %}
      <h1 class="hero__text absolute bottom-0 left-0">photo and video equipment rental</h1>
    </div>
  </div>
</section>
{% schema %}
{
  "name": "Hero section",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Hero desktop banner"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Hero mobile banner"
    },
    {
      "type": "text",
      "id": "hero_text",
      "label": "Hero text",
      "default": "photo and video equipment rental"
    }
  ],
  "presets": [
    {
      "name": "Hero section"
    }
  ]
}
{% endschema %}
